<% include ./static/header %>
<% include ./static/sidebar %>
<% include ./static/navbar %>

<div class="col-md-6 col-lg-10-2">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
                <br>
            <h3 class="box-title">Verificar</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/andon_guardad" method="POST">
            <div class="box-body">

                <!------->
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="Titulo">Gage ID:</label>
                        <input type="text" class="form-control" id="gage" value="<%= data%>" name="gage" readonly>
                    </div>


                        <div class="form-group col-lg-6">
                            <label for="Titulo">Ubicacion</label>
                            <select class="form-control" name="ubicacion" id="ubicacion" required>
                                <option value="" selected>Seleccionar</option>
                                <% for (var i = 0; i < data2.length; i++) { %>
                                <option><%= data2[i].ubicacion %></option>
                                <% } %>
                 
    
                            </select>
                        </div>
               
                </div>

                    <div class="box-footer">
                        <button id="btnguardar" type="submit" class="btn btn-primary"
                            onclick="$('form').attr('action', '/guardar_reubicar');" >Guardar</button>
                    </div>
        </form>
    </div>
    <!-- /.box -->

    <% include ./static/footer %>
</div>
</body>

</html>