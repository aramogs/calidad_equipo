<% include ./static/header %>
<% include ./static/sidebar %>
<% include ./static/navbar %>

<div class="col-md-6 col-lg-10-2">
    <!-- general form elements -->
    <br>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Baja de Equipo</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/andon_guardad" method="POST">
            <div class="box-body">

                <!------->
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="Titulo">Dado de Baja Por:</label>
                        <input type="text" class="form-control" id="user" value="<%= data2%>" name="user" readonly>
                    </div>


                    <div class="form-group col-lg-6">
                        <label for="Titulo">ID Equipo:</label>
                        <input type="text" class="form-control" id="equipo" value="<%= data%>" name="equipo" readonly>
                    </div>
                </div>


                    <div class="form-group">
                        <label for="Descripcion">Motivo:</label>
                        <textarea type="text" class="form-control " rows="3" name="motivo" required></textarea>
                    </div>

                    <input type="text" class="form-control" id="movimiento" value="<%= data3%>" name="movimiento" hidden>

                    <div class="box-footer">
                        <button id="btnguardar" type="submit" class="btn btn-primary"
                            onclick="$('form').attr('action', '/guardar_eliminado');" >Guardar</button>
                    </div>
        </form>
    </div>
    <!-- /.box -->

    <% include ./static/footer %>
</div>
</body>

</html>