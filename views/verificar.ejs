<% include ./static/header %>
<% include ./static/sidebar %>
<% include ./static/navbar %>

<div class="col-md-6 col-lg-10-2">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
                <br>
            <h3 class="box-title">Verificar</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/andon_guardad" method="POST">
            <div class="box-body">

                <!------->
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="Titulo">Verificado Por:</label>
                        <input type="text" class="form-control" id="user" value="<%= data2%>" name="user" readonly>
                    </div>


                    <div class="form-group col-lg-6">
                        <label for="Titulo">ID Equipo:</label>
                        <input type="text" class="form-control" id="equipo" value="<%= data%>" name="equipo" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label for="Titulo">Tipo</label>
                        <select class="form-control" name="tipo" id="tipo" required>
                            <option value="" selected>Seleccionar</option>
                            
                            
                            <%if(tipoverificacion== "verificacion"){%>
                                <option>Verificacion</option>
                           
                            <%} else if(tipoverificacion== "ryr"){%>
                                <option>Estudio R&R</option>
                                <%}else{%>
                                    <option>Verificacion</option>
                                    <option>Estudio R&R</option>
                                    <%}%>
                        </select>
                    </div>
                </div>

                <input type="text" class="form-control" id="tipoverificacion2" value="<%= tipoverificacion%>" name="tipoverificacion2" hidden>


                    <div class="form-group">
                        <label for="Descripcion">Comentario:</label>
                        <textarea type="text" class="form-control " rows="3" name="comentario" required></textarea>
                    </div>

                    <div class="box-footer">
                        <button id="btnguardar" type="submit" class="btn btn-primary"
                            onclick="$('form').attr('action', '/guardar_verificacion');" >Guardar</button>
                    </div>
        </form>
    </div>
    <!-- /.box -->

    <% include ./static/footer %>
</div>
</body>

</html>